<% include common/header.ejs %>

        <!-- MAIN CONTENT START-->
        <div class="col-xs-8 col-md-8 col-lg-9 leftpanel">
            <div class="contact-info">
                <div class="contact-header">
                    <h4>1. Контактні дані</h4>
                </div> 
                            
                <div class="row">
                    <!-- Contact info-->
                    <div class="col-md-7">
                        <form class="form-horizontal name-group" id="order-register" novalidate="novalidate">
                            <div class="form-group row" id="rules">
                                <label for="nameContact" class="col-sm-2 control-label">Ім’я</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="text" name="nameContact" id="nameContact" placeholder="Ім’я Прізвище">
                                </div>
                                <span id="hide">
                                    Введіть тільки власне ім’я, без цифр
                                </span>
                            </div>

                            <div class="form-group phone-group" id="rules">
                                <label for="phoneContact" class="col-sm-2 control-label">Телефон</label>
                                <div class="col-sm-10">
                                    <input  class="form-control" type="tel" name="phoneContact" id="phoneContact" placeholder="+380994010999"> 
                                </div>
                                <span id="hide">
                                    Введіть номер телефону у форматі +380 або почніть з 0
                                </span>
                            </div>

                            <div class="form-group address-group" id="rules">
                                <label for="addressContact" class="col-sm-2 control-label">Адреса</label>
                                <div class="col-sm-10">
                                    <input class="form-control" type="text" name="addressContact" id="addressContact" placeholder="в. М.Цвєваєвой, 14-б">
                                </div>
                                <span id="hide">
                                    Введіть адресу доставки піци
                                </span>
                            </div>
                        </form>
    				</div>
                    <!-- Info Order-->
                    <div class="col-md-5 order-info-block">
                        <div class="order-info">
                            <h4>Інформація про замовлення</h4>
                            <p class="order-summery-time">
								<b>Приблизний час доставки:</b> <b id="sumtime">--:-- хв</b>
                            </p>
                            <p class="order-summery-adress">
								<b>Адреса доставки:</b><b id="sumadress"> невідома</b>
                            </p>
                        </div>
                    </div>
                </div>
                <button id="create-order" class="post-btn btn btn-warning btn-md" type="button">Далі</button>
            </div>
            <div id ="map-container" class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
			<!-- map goes here! -->
			</div>
        </div>
        <!-- MAIN CONTENT END-->
        
        <!-- ORDER CONTENT START-->
        <div class="col-xs-4 col-md-4 col-lg-3 rightpanel">
             <div class="inside">
                 <div class="row-one">
                     <span class="orders-title">
                         Замовлення
                         <span id="order-item-count" class="badge orange pizza-count">0</span>
                     </span>
                 </div>
                 
                 <div id="cart" class="row-two">
                     <div class="no-order">
                         <h4 class="small">Пусто в холодильнику?</h4>
                         <h4 class="small">Замовте піцу!</h4>
                     </div>
                 </div>
                 
                 <div class="row-three">
                     <div class="order-total-price">
                         <span class="">Сума замовлення</span>
                         <span class="total-price">0 грн.</span><span>грн.</span>
                     </div>
                     <a href="./index.html" class="btn btn-default btn-lg btn-block submit">Редагувати замовлення</a>
                 </div>
            </div>
        </div>
        <!-- ORDER CONTENT END-->

